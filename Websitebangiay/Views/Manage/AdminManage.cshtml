@{
	ViewBag.Title = "AdminManage";
	Layout = null;
}

<br />
<br />
<div class="container  push-down-30">
	<div class="row">
		<div class="col-xs-12  push-down-60">
			<h1 class="center">Store<span class="light"></span> Management</h1>
			<hr class="divider">
			<div class="text-shrink">
				<p class="text-highlight">
					Use this page to view, add, edit, delete account, income, bill, bill details, customer and product.
				</p>
			</div>
			<hr class="divider  divider-about">
		</div>
