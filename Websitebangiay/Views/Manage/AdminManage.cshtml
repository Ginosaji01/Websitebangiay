			<div class="row">
				<div class="features-container">
					<div class="col-md-6">
						<div class="features-images">
							<img src="~/Content/Sanpham/money.png" width="270" height="230">
						</div>
					</div>
					<div class="col-md-6">
						<div class="features-detail">
							<h3><span class="light">Income</span></h3>
							<ul>
								<li>View income (month or year): @Html.ActionLink("View", "Profit", "Profit")</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-6">
			<div class="row">
				<div class="features-container">
					<div class="col-md-6">
