								<li>Edit existed product(s): @Html.ActionLink("Edit", "Index", "Products")</li>
								<li>Delete existed product(s) @Html.ActionLink("Delete", "Index", "Products")</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
