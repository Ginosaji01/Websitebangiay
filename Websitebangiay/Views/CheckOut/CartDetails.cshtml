@{
	ViewBag.Title = "CartDetails";
	Layout = null;
}

<div class="woocommerce  push-down-30">
	<div class="container">
		<div class="row">
			<div class="col-xs-12  push-down-30">
				<h3>Cart</h3>
				<hr>
				<table class="shop-table shop-cart">
					<thead>
						<tr class="cart_table_title">
							<th class="product-remove"></th>
							<th class="product-thumbnail"></th>
							<th class="product-name">Product</th>
							<th class="product-price">Price</th>
							<th class="product-quantity">Quantity</th>
							<th class="product-quantity"> Size </th>
							<th class="product-subtotal">Total</th>
						</tr>
					</thead>
					<tbody>
						<tr class="cart_table_item" ng-repeat="item in carts">
							<td class="product-remove"><span class="glyphicon  glyphicon-remove" ng-click="removeCart(item)"></span></td>
							<td class="product-thumbnail"><img class="product-in-cart" ng-src="{{'/Content/Sanpham/' + item.id_type + '/' + item.image}}"></td>
							<td class="product-name"><a ui-sref="productDetails({Id: item.Id})">{{item.title}}</a></td>
							<td class="product-price">{{item.price}}</td>
							<td class="product-quantity">
								<div class="quantity  js--quantity">
									<input type="button" value="-" ng-click="cartQuantityDesc(item)" class="quantity__button  js--minus-one  js--clickable">
									<input type="text" name="quantity" value="{{item.quantity}}" class="quantity__input">
									<input type="button" value="+" ng-click="cartQuantityInc(item)" class="quantity__button  js--plus-one  js--clickable">
								</div>
							</td>
							<td class="product-quantity">{{item.size}}</td>
							<td class="product-subtotal">{{item.price * item.quantity}}</td>
						</tr>
						<tr class="cart_table_action">
							<td colspan="7" class="actions">
								<div class="col-xs-6">
								</div>
								<div class="col-xs-6">
									<a ui-sref="checkOut" class="btn  btn-primary  pull-right">Proceed to checkout</a>
								</div>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="col-xs-12 col-sm-6">
			</div>
			<div class="col-xs-12 col-sm-6">
				<!-- Your order - table -->
				<h3 class="pull-right"><span class="light">Cart</span> Totals</h3>
				<table class="shop_table  push-down-30">
					<tfoot>
						<tr class="cart-subtotal">
							<th>Cart Subtotal</th>
							<td><span class="amount">{{setTotals(item)}}</span></td>
						</tr>
						<tr class="shipping">
							<th>Shipping</th>
							<td>Free Shipping</td>
						</tr>
						<tr class="total">
							<th><strong>Order Total</strong></th>
							<td>
								<strong><span class="amount">{{setTotals(item)}}</span></strong>
							</td>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
		<hr class="divider">
	</div>
</div>
<div class="search-mode__overlay"></div>

