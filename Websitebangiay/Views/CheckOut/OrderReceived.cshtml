@{
	Layout = null;
}
<div class="woocommerce  push-down-30" ng-controller="ReceiveOrderController">
	<div class="container">
		<h3><span class="light">Order</span> Received</h3>
		<hr>
		<p>Thank you. Your order has been received.</p>
		<ul class="order_details">
			<li class="order">
				Order: <strong>Success</strong>
			</li>
			<li class="date">
				Date: <strong>{{getDateTime | date:'dd-MM-yyyy'}}</strong>
			</li>
			<li class="total">
				Total: <strong><span class="amount">{{setTotals(item)}}VND</span></strong>
			</li>
			<li class="method">
				Payment method: <strong>Payment on delivery</strong>
			</li>
		</ul>
		<br>
		<p>Make your payment when shipper delivered your order.</p>
		<h2><span class="light">Order</span> Details</h2>
		<table class="shop_table  push-down-30">
			<thead>
				<tr>
					<th class="product-name">Product</th>
					<th class="product-total">Total</th>
				</tr>
			</thead>
			<tfoot>
				<tr class="cart-subtotal">
					<th>Cart Subtotal</th>
					<td><span class="amount">{{setTotals(item)}}</span></td>
				</tr>
				<tr class="shipping">
					<th>Shipping</th>
					<td>Free Shipping</td>
				</tr>
				<tr class="total">
					<th><strong>Order Total</strong></th>
					<td>
						<strong><span class="amount">{{setTotals(item)}}</span></strong>
					</td>
				</tr>
			</tfoot>
			<tbody>
				<tr class="checkout_table_item" ng-repeat="item in carts">
					<td class="product-name">
						{{item.title}} <strong class="product-quantity">× {{item.quantity}}</strong><br>
						<strong>pa_color:</strong> black
					</td>
					<td class="product-total"><span class="amount">{{setTotals(item)}}</span></td>
				</tr>
			</tbody>
		</table>
		<header class="title">
			<h3><span class="light">Customer</span> details</h3>
		</header>
		<dl class="customer_details">
			<dt>First Name:</dt>
			<dd>{{firstName}}</dd>
			<dt>Last Name:</dt>
			<dd>{{lastName}}</dd>
			<dt>Email:</dt>
			<dd>{{email}} </dd>
			<dt>Phone:</dt>
			<dd>0{{phone}}</dd>
		</dl>
		<hr />
		<div class="row">
			<div class="col-xs-12  col-sm-12">
				<header class="title">
					<h3><span class="light">Shipping</span> Address</h3>
				</header>
				<address>
					<p>
						Full name: {{firstName}} {{lastName}}<br>
						Address: {{address}}
					</p>
				</address>
			</div>
		</div>
		<hr class="divider">
	</div>
</div>
