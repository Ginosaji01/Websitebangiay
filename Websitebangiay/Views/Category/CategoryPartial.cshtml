<div class="banners  push-down-30" ng-controller="CategoryController">
	<div class="container" ng-controller="AllProductController">
		<div class="row">
			<div class="col-xs-12  col-sm-6  col-md-3" ng-repeat="item in categoryList">
				<div class="banners-box">
					<span class="glyphicon--banners">
						<img style="margin-top:-90%;" ng-src="~/Content/Sanpham/Related/{{item.image}}" width="50" height="50" />
					</span>
					<a ng-if="item.name === 'ADIDAS'" ui-sref="adidasProductList" class="banners__title">{{item.name}}</a>
					<a ng-if="item.name === 'NIKE'" ui-sref="nikeProductList" class="banners__title">{{item.name}}</a>
					<a ng-if="item.name === 'CONVERSE'" ui-sref="converseProductList" class="banners__title">{{item.name}}</a>
					<a ng-if="item.name === 'PUMA'" ui-sref="pumaProductList" class="banners__title">{{item.name}}</a>
				</div>
			</div>
		</div>
	</div>
</div>
